@{
    ViewBag.Title = "Detalhes";
}

<h2>Dados do Cliente</h2>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>

    <dt>Telefone:</dt>
    <dd>@Model.Telefone</dd>

    <dt>Email:</dt>
    <dd>@Model.Email</dd>


</dl>

<div>
    <label class="control-label" for=""></label>
