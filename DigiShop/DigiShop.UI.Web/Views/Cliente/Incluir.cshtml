@model DigiShop.Models.Cliente

@{
    ViewBag.Title = "Incluir";
}

<h2>Incluir</h2>

<form method="post" class="f-horizontal">

    @Html.ValidationSummary(null, new{@class="text-danger"})

    <div>
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control" type="text" name="Nome" value="@Model.Nome" />
    </div>

    <div>
        <label class="control-label" for="Telefone">Telefone:</label>
        <input class="form-control" type="text" name="Telefone" value="@Model.Telefone" />
    </div>

    <div>
        <label class="control-label" for="Email">Email:</label>
        <input class="form-control" type="text" name="Email" value="@Model.Email" />
    </div>
    <div>
        <label class="control-label" for=""></label>
    </div>
    <div>
       <input class="btn btn-info" type="submit" value="Gravar" />
