@model DigiShop.UI.Web.Models.PedidoViewModel

@{
    ViewBag.Title = "Incluir";
}

<style>
    .celula-numero {
        white-space:nowrap;
        text-align:right;
    }

    #novoDiv {
        margin-top:40px;
        margin-bottom:40px;
    }

</style>


<h2>Incluir</h2>


@using (Html.BeginForm()) 
{
   
    
    <div class="form-horizontal">
        <h4>Novo Pedido</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        <div class="form-group">
            @Html.LabelFor(model => model.Data, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Model.Data.ToString("d")

            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.ClienteId, "Cliente:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.ClienteId, new SelectList(Model.Clientes, "Id", "Nome", Model.ClienteId), new { @class = "control-form" })
                @Html.ValidationMessageFor(model => model.ClienteId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FormaPagamento, "Forma de Pagamento", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.FormaPagamento, new SelectList(Model.FormasPagamento), new { @class = "control-form" })
                @Html.ValidationMessageFor(model => model.FormaPagamento, "", new { @class = "text-danger" })
            </div>
        </div>

        <hr/>

        <div id="novo-container">
            <button type="button" id="novoButton" class="btn btn-info">Incluir Item</button>
            
            
            <div id="novoDiv" style="display:none">

               
                @Html.DropDownListFor(model => model.NovoItemProdutoId, new SelectList(Model.Produtos,"Id","Nome"), new {@class="form-control", style = "float:left;margin-right:10px"})
                @Html.EditorFor(model => model.NovoItemQuantidade, new {htmlAttributes = new {@class = "form-control", style = "width:70px; float:left;margin-right:10px" } })
               
                <input type="submit" name="incluirProduto" value="Incluir"class="btn btn-info" />


            </div>

        </div>

        <div>
            <table class="table">
                <tr>
                    <th>Nome do Produto</th>
                    <th class="celula-numero">Quantidade</th>
                    <th class="celula-numero">Preço</th>
                    <th class="celula-numero">Total</th>
                </tr>
                @for (int i = 0; i < Model.Items.Count; i++)
                {

                    @Html.HiddenFor(model => model.Items[i].ProdutoId)
                    @Html.HiddenFor(model => model.Items[i].ProdutoNome)
                    @Html.HiddenFor(model => model.Items[i].Quantidade)
                    @Html.HiddenFor(model => model.Items[i].Valor)


                    <tr>
                        <td>@Model.Items[i].ProdutoNome</td>
                        <td class="celula-numero">@Model.Items[i].Quantidade</td>
                        <td class="celula-numero">@Model.Items[i].Valor.ToString("c")</td>
                        <td class="celula-numero">@Model.Items[i].Total.ToString("c")</td>

                    </tr>
                }



            </table>


        </div>


        <div>
            <label class="control-label" for=""></label>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="Gravar" value="Gravar" class="btn btn-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Voltar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $(function () {

            $('#novoButton').click(function (){
                $('#novoDiv').toggle();
            });


        });
    </script>
}
