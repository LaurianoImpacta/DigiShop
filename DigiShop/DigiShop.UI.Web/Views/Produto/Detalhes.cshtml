@model DigiShop.Models.Produto

@{
    ViewBag.Title = "Detalhes";
}

<h2>Dados do Produto</h2>

<dl>
    <dt>Nome:</dt>
    <dd>@Model.Nome</dd>

    <dt>Estoque:</dt>
    <dd>@Model.Estoque</dd>

    <dt>Preço:</dt>
    <dd>@Model.Preco.ToString("c")</dd>


</dl>

<div>
    <label class="control-label" for=""></label>
</div>

<div>
    <a href="/Produto/Index" class="btn btn-info">Voltar</a>
    <a href="/Produto/Alterar/@Model.Id" class="btn btn-info">Alterar</a>
    <a href="/Produto/Excluir/@Model.Id" class="btn btn-info">Excluir</a>

</div>