@model DigiShop.Models.Produto

@{
    ViewBag.Title = "Incluir";
}

<h2>Incluir Produto</h2>

<form method="post" class="f-horizontal">

    @Html.ValidationSummary(null, new{@class="text-danger"})

    <div>
        <label class="control-label" for="Nome">Nome:</label>
        <input class="form-control" type="text" name="Nome" value="@Model.Nome" />
    </div>

    <div>
        <label class="control-label" for="Estoque">Quantidade:</label>
        <input class="form-control" type="text" name="Telefone" value="@Model.Estoque" />
    </div>

    <div>
        <label class="control-label" for="Preco">Preço:</label>
        <input class="form-control" type="text" name="Email" value="@Model.Preco.ToString("c")" />
    </div>
    <div>
        <label class="control-label" for=""></label>
    </div>
    <div>
       <input class="btn btn-info" type="submit" value="Gravar" />
    </div>

</form>